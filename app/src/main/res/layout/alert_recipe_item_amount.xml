<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="173dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_rI_name"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:autoText="true"
        android:background="@color/themeColor"
        android:gravity="center"
        android:text="TextView"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/editText_recipeItemAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_setRecipeItemAmount"
        android:layout_width="411dp"
        android:layout_height="33dp"
        android:background="@color/pink"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_recipeItemAmount"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="StÃ¼ckzahl"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/button_setRecipeItemAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>