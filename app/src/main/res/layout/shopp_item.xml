<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/listView_ShopBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lightSettingBackground"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_shopEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_shopEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_ItemName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="casual"
        android:gravity="center|left"
        android:text="TextView1"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_shopEntry"
        app:layout_constraintStart_toEndOf="@+id/checkBox_shopEntry"
        app:layout_constraintTop_toTopOf="@+id/checkBox_shopEntry" />

</androidx.constraintlayout.widget.ConstraintLayout>